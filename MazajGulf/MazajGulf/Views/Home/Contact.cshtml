

@{
    ViewBag.Title = "ContactUs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>

    function initMap() {
        var locations = [
         ['Mazaj Gulf', 25.267123, 51.519341, 2],
        ];

        var map = new google.maps.Map(document.getElementById('map_canvas'), {
            zoom: 12,
            center: new google.maps.LatLng(25.27966, 51.51923),
            mapTypeId: google.maps.MapTypeId.ROADMAP
        });

        var infowindow = new google.maps.InfoWindow();

        var marker, i;

        for (i = 0; i < locations.length; i++) {
            marker = new google.maps.Marker({
                position: new google.maps.LatLng(locations[i][1], locations[i][2]),
                map: map
            });

            google.maps.event.addListener(marker, 'click', (function (marker, i) {
                return function () {
                    infowindow.setContent(locations[i][0]);
                    infowindow.open(map, marker);
                }
            })(marker, i));
        }
    }
</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAlfk9irvDgU0n-21GLfrWZ188OIlMNIMI&callback=initMap">
</script>

<section class="content">
    <div class="bg-1">
        <div class="container_12">
            <div class="row">
                <div class="grid_4">
                    <div class="map_wrapper">
                        <h2>Find us</h2>
                        <div id="map_canvas"></div>
                        <dl class="address">
                            <dt>Ibn Sina Street, Al Muntazah,<br> P.O.Box - 46056,<br />Doha - Qatar. </dt>
                            <dd><span>Freephone:</span>974-33113832 </dd>
                            <dd><span>Telephone:</span>+974-44165200 </dd>
                            <dd><span>FAX:</span>+1 504 889 9898 </dd>
                            <dd><span class="e-mail">E-mail: <a href="mailto:info@mazajgulf.com" class="demo">info@mazajgulf.com</a></span></dd>
                        </dl>
                    </div>
                </div>
                <article class="grid_8">
                    <h2>Get in touch</h2>
                    <form id="contact-form">
                        <div class="success-message">Contact form submitted.</div>
                        <label class="name">
                            <input type="text" placeholder="Name:" data-constraints="@@Required @@JustLetters" />
                            <span class="empty-message">*This field is required.</span>
                            <span class="error-message">*This is not a valid name.</span>
                        </label>
                        <label class="email">
                            <input type="text" placeholder="Email:" data-constraints="@@Required @@Email" />
                            <span class="empty-message">*This field is required.</span>
                            <span class="error-message">*This is not a valid email.</span>
                        </label>
                        <label class="phone">
                            <input type="text" placeholder="Phone:" data-constraints="@@Required @@JustNumbers" />
                            <span class="empty-message">*This field is required.</span>
                            <span class="error-message">*This is not a valid phone.</span>
                        </label>
                        <label class="message">
                            <textarea placeholder="Message:" data-constraints='@@Required @@Length(min=20,max=999999)'></textarea>
                            <span class="empty-message">*This field is required.</span>
                            <span class="error-message">*The message is too short.</span>
                        </label>
                        <div class="form_btns">
                            <a href="#" data-type="reset" class="btn">clear</a>
                            <a href="#" data-type="submit" class="btn">send</a>
                        </div>
                    </form>
                </article>
            </div>
        </div>
    </div>
</section>



